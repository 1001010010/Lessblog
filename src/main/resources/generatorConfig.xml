<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

  <context id="MysqlTables" targetRuntime="MyBatis3">
  
    <!-- 连接 -->
    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql:///lessblog"
        userId="root"
        password="hosuke">
    </jdbcConnection>

    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

	<!-- 实体类生成位置 -->
    <javaModelGenerator targetPackage="com.hosuke.generated.pojo" targetProject="src/main/java">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

	<!-- mapper映射文件生成位置 -->
    <sqlMapGenerator targetPackage="com.hosuke.generated.mapper"  targetProject="src/main/java">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

	<!-- mapper接口的生成位置 -->
    <javaClientGenerator type="XMLMAPPER" targetPackage="com.hosuke.generated.mapper"  targetProject="src/main/java">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

	<table tableName="comments" domainObjectName="Comment"></table>
	<table tableName="posts" domainObjectName="Post"></table>
    <table tableName="users" domainObjectName="User"></table>
    <table tableName="tags" domainObjectName="Tag"></table>

  </context>
</generatorConfiguration>